{
	"cmd": ["qemu-system-riscv64", "-machine", "virt", "-nographic", "-m", "728M", "-smp", "2", "-kernel", "images/riscv/.ignore/uboot.elf", "-device", "virtio-rng-pci", "-drive", "file=images/riscv/.ignore/ubuntu-23.10-preinstalled-server-riscv64.img,format=raw,if=virtio", "-drive", "file=images/riscv/.ignore/user-data.img,format=raw", "-device", "virtio-net-device,netdev=eth0", "-netdev", "user,id=eth0,hostfwd=tcp::10022-:22"],
	"files": {
